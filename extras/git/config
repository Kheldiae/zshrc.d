[alias]
    # remove this if you don't have gitg installed
    g = !flatpak run org.gnome.gitg
    adi = add *
    cam = commit -am
    stat = status -s
    glog = log --all --pretty='format:%d %Cgreen%h%Creset %an - %s' --graph
    # config aliases
    conf = config -e
    gconf = config --global -e
    # revert aliases
    revert = reset --hard
    rollback = reset --hard HEAD~1
[color]
    ui = auto
[pull]
    rebase = true
[rebase]
    autoStash = true
[blame]
    ignoreRevsFile = .git-blame-ignore-revs
[push]
    autoSetupRemote = true
[protocol "file"]
    allow = always
[init]
    defaultBranch = master

# vim: ft=gitconfig
